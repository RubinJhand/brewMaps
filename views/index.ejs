</head>

<body>
  <%- include('partials/_header') %>
    <main>
        <h1>Brew Maps</h1>
        <h2>Independent Maps, User Created</h2>
        <form class="form2">
          <input type="text" class="form-control-2" placeholder="Enter Your Location" >
          <button type="submit" class="find-map">Find maps!</button>
        </form>
          <h2>My Map 1</h2>
          <div id="map"></div>
          
        <script>

          function initMap() {
            let map = new google.maps.Map(
              document.getElementById('map'), {
                zoom: 14,
                center: { lat: 52.1332, lng: -106.6700}
            });
          }

            addMarker({
              coords:{lat: 52.1247, lng: -106.6705},
              content: '<h1> HELLO WORLD</h1>'
              })

        //add marker function
          function addMarker(props){
            let marker = new google.maps.Marker({
              position: props.coords,
              map: map
            });
            //check content so description doesn't duplicate
            if(props.content) {
              //description box over pin
              let infoWindow = new google.maps.infoWindow({
                content: props.content
              });
              marker.addListener('click', function(){
                infoWindow.open(map, marker);
              });
            }
          }

<main>
  <body>

    <h1>Brew Maps</h1>
    <h2>Check out some new maps!</h2>
    <form class="form2">
      <input type="text" class="form-control-2" placeholder="Enter Your Location" />
      <div class="button-holder">
        <button type="submit" class="find-map">Find maps!</button>
        <button type="submit" class="create-map">Create New Map</button>
      </div>
    </form>

    <% maps.forEach((name, id) => { %>
      <h2><%= name %></h2>
      <div class="maps" id="map-<%=id%>"  style="width:400px; height:250px;"></div>
      <div class="edit-delete">
        <button type="submit" class="edit-button">Edit</button>
        <button type="submit" class="delete-button">Delete</button>
      </div>
      <% }) %>

    </body>
  </main>
  </html>

