<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <!-- CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDPZzw7P0JN6ARr7TgqwufNUP-Vf-2jOc8">
    </script>
  <script type="text/javascript" src="/scripts/maps.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <!-- External JS -->
  <script src="https://kit.fontawesome.com/f316481a98.js" crossorigin="anonymous"></script>

  <title><em>Brew Maps</em></title>
</head>

<body>
  <nav>
    <span>
      <img
        src="https://www.freelogodesign.org/file/app/client/thumb/c2043bd9-a45d-424d-b237-9711e61da44b_1000x600-watermark.png?20200627"
        alt="coffe-map logo" style="width:150px;height:100px;">
    </span>
    <div>
      <form method='POST' action='/login/1'>
        <div class="form-group">
          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
            placeholder="Enter email">
        </div>
        <div class="form-group">
          <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-secondary">Login</button>
        <button type="submit" class="btn btn-secondary">Register</button>
    </div>
    </form>
    </div>

  </nav>

</body>


<main>
  <body>

    <h1>Brew Maps</h1>
    <h2>Check out some new maps!</h2>
    <form class="form2">
      <input type="text" class="form-control-2" placeholder="Enter Your Location" >
      <div class="button-holder">
        <button type="submit" class="find-map">Find maps!</button>
        <button type="submit" class="create-map">Create New Map</button>
      </div>
    </form>

    <% maps.forEach((name, id) => { %>
      <h2><%= name %></h2>
      <div class="maps" id="map-<%=id%>"  style="width:400px; height:250px;"></div>
      <div class="edit-delete">
        <button type="submit" class="edit-button">Edit</button>
        <button type="submit" class="delete-button">Delete</button>
      </div>
      <% }) %>

    </body>
  </main>
  </html>

